
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Services</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link href="~/Assets/Client/css/service_style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/Client/vendor/fontawesome-free/css/fontawesome.min.css">
    <script src="https://kit.fontawesome.com/ff1f89259c.js" crossorigin="anonymous"></script>
    <link href="~/Assets/Client/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Assets/Client/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
        <div class="container-fluid">
            <a class="navbar-branch" href="#">
                <img src="~/Assets/Client/images/Luc.png" height="50">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/service">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Connect</a>
                    </li>
                    @{
                        var session = (ShopOnline.Common.UserLogin)Session[ShopOnline.Common.ConstantsCommon.USER_SESSION];
                    }
                    @if (session == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/user/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/register">Sign Up</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown no-arrow hidden">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span style="color: skyblue" class="mr-2 d-none d-lg-inline ">@session.UserName</span>
                                <img style=" max-width: 30px; max-height:30px;" class="img-profile rounded-circle"
                                     src="~/Assets/Client/images/hiep.jpg">
                            </a>
                            @*Dropdown - User Information*@
                            <div style="background-color: aquamarine ;margin: 0;" class=" dropdown-menu dropdown-menu-lg-right shadow animated--grow-in m-0"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout","user")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>

                            </div>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>

    <div class="container-fluid padding">
        <div class="row welcome text-center">
            <div class="col-12">
                <h1 class="display-4">What We Offer</h1>
            </div>
            <!-- Horizontal Rule -->
            <div class="col-12">
                <p>Pet Health Clinic offers a wide variety of professional services for your pet including general surgery, nutritional counseling, patient monitoring, dentistry, grooming, vaccinations, and much more! If you're ready to see our expert veterinary team in Easton, call Pet Health Clinic today at 410-820-4286 or make an appointment now.</p>
            </div>
        </div>
        <hr>
    </div>
    <div class="container-fluid padding">
        <div class="row text-center padding">
            <div class="col-xs-12 col-sm-6 col-md-4 ">
                <a href="/Service/SurgicalServices" class="btn btn-primary btn-circle btn-lg">
                    <i class="fa-solid fa-user-doctor"></i>
                </a>
                <h3>Surgical Services</h3>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <a href="/Service/PreventativeServices" class="btn btn-success btn-circle btn-lg">
                    <i class="fa-solid fa-capsules"></i>
                </a>
                <h3>Preventative Services </h3>

            </div>
            <div class="col-sm-12 col-md-4">
                <a href="/Service/AdditionalServices" class="btn btn-primary btn-circle btn-lg">
                    <i class="fa-solid fa-briefcase-medical"></i>
                </a>
                <h3>Additional Services</h3>
            </div>
        </div>
        <hr>
        <div class="row text-center padding">
            <div class="col-xs-12 col-sm-6 col-md-4 ">
                <a href="/Service/PatientMonitoring" class="btn btn-primary btn-circle btn-lg">
                    <i class="fa-solid fa-stethoscope"></i>
                </a>
                <h3>Patient Monitoring</h3>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <a href="/Service/PetWellness" class="btn btn-success btn-circle btn-lg">
                    <i class="fa-regular fa-heart"></i>
                </a>
                <h3>Pet Wellness </h3>

            </div>
            <div class="col-sm-12 col-md-4">
                <a href="/Service/NutritionalCounselings" class="btn btn-primary btn-circle btn-lg">
                    <i class="fa-solid fa-bone"></i>
                </a>
                <h3>Nutritional Counselings</h3>
            </div>
        </div>
        <hr>
        <div class="row text-center padding">
            <div class="col-xs-12 col-sm-6 col-md-4 ">
                <a href="/Service/Grooming" class="btn btn-primary btn-circle btn-lg">
                    <i class="fa-solid fa-broom"></i>
                </a>
                <h3>Grooming</h3>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <a href="/Service/ScreeningTest" class="btn btn-success btn-circle btn-lg">
                    <i class="fa-solid fa-print"></i>
                </a>
                <h3>Screening Tests</h3>

            </div>
            <div class="col-sm-12 col-md-4">
                <a href="/Service/PetSupplies" class="btn btn-primary btn-circle btn-lg">
                    <i class="fa-solid fa-dog"></i>
                </a>
                <h3>Pet Supplies</h3>
            </div>
        </div>
    </div>
    <footer>
        <div class="container-fluid padding">
            <div class="row text-center">
                <div class="col-md-4">
                    <img src="~/Assets/Client/images/Luc.png">
                    <hr class="light">
                    <p>111-222-3333</p>
                    <p>nhatdang261@gmail.com</p>
                    <p>475A Dien Bien Phu, Binh Thanh district, HCM, VietNam</p>
                </div>
                <div class="col-md-4">
                    <hr class="light">
                    <h5>Working hours</h5>
                    <hr class="light">
                    <p>Monday-Friday: 8am - 5pm</p>
                    <p>Weekend: 8am - 12am</p>
                </div>
                <div class="col-md-4">
                    <hr class="light">
                    <h5>Services</h5>
                    <hr class="light">
                    <p>Outsourcing</p>
                    <p>Website development</p>
                    <p>Mobile applications</p>
                </div>
                <div class="col-12">
                    <hr class="light-100">
                    <h5>&copy; WebProject</h5>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
